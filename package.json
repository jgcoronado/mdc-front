{
  "name": "mysql-simple-front",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "compose:local": "docker-compose -f docker-compose-local.yml up -d",
    "compose:local:build": "docker-compose -f docker-compose-local.yml up --build --force-recreate -d",
    "compose:local:stop": "docker-compose -f docker-compose-local.yml stop",
    "compose:local:down": "docker-compose -f docker-compose-local.yml down"

  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "axios": "^1.11.0",
    "tailwindcss": "^4.1.12",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "daisyui": "^5.0.50",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0"
  }
}
